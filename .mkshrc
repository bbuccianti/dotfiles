# Prompt
PS1=$'\1\e[34m\1$(echo $PWD | sed "s,^$HOME,~,")\1\e[32m\1 $ \e[0m'

# History file
HISTFILE="$HOME/.mkshistory"
HISTSIZE=10000

# Aliases for package management
alias xi='doas xbps-install -S'
alias xu='doas xbps-install -Syuv'
alias xr='doas xbps-remove -R'
alias xq='xbps-query -Rs'

# Bindings
bind '^L'='clear-screen'

# Source fzf-mksh
source ~/src/fzf-mksh/key-bindings.mksh

# Functions

function help {
    # Get a cheat sheet of examples
    curl cht.sh/$1
}

# Function for mounting atom nfs folders

function m {
    doas mount "/mnt/atom/$1"
}

function u {
    doas umount "/mnt/atom/$1"
}

