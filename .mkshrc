# Prompt
PS1=$'\1\e[34m\1$(echo $PWD | sed "s,^$HOME,~,")\1\e[32m\1 $ \e[0m'

# History file
HISTFILE="$HOME/.mkshistory"
HISTSIZE=10000

# PATH
PATH=~/bin:$PATH

# Editor
VISUAL="emacs"
EDITOR=$"VISUAL"
set -o emacs

# Useful
PAGER=less
BEMENU_BACKEND=wayland
_JAVA_AWT_WM_NONREPARENTING=1

# Aliases for package management
alias xi='doas xbps-install -S'
alias xu='doas xbps-install -Syuv'
alias xr='doas xbps-remove -R'
alias xq='xbps-query -Rs'

# Bindings
bind '^L'='clear-screen'

# Source fzf-mksh
source ~/src/github/seanlaguna/fzf-mksh/key-bindings.mksh

# Functions
function help {
    # Get a cheat sheet of examples
    curl cht.sh/$1
}
